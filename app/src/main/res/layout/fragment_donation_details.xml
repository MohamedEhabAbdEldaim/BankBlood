<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/fragment_details_tv_name"
                style="@style/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <ImageView
                style="@style/view"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <TextView
                android:id="@+id/fragment_details_tv_age"
                style="@style/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <ImageView
                style="@style/view"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <TextView
                android:id="@+id/fragment_details_tv_blood_type"
                style="@style/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <ImageView
                style="@style/view"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <TextView
                android:id="@+id/fragment_details_tv_number_bdget"
                style="@style/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <ImageView
                style="@style/view"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <TextView
                android:id="@+id/fragment_details_tv_hospital"
                style="@style/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <ImageView
                style="@style/view"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <TextView
                android:id="@+id/fragment_details_tv_adress"
                style="@style/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <ImageView
                style="@style/view"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <TextView
                android:id="@+id/fragment_details_tv_phone"
                style="@style/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <ImageView
                style="@style/view"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/fragment_details_tv_note"
                style="@style/text_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/fragment_details_mv_map"
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:layout_marginStart="@dimen/d8"
                android:layout_marginTop="@dimen/d4"
                android:layout_marginEnd="@dimen/d8" />


            <Button
                android:id="@+id/donation_fragment_bt_send"
                android:layout_width="@dimen/d150"
                android:layout_height="@dimen/d40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d8"
                android:layout_marginBottom="@dimen/d8"
                android:background="@drawable/button_shaprede"
                android:gravity="center"
                android:text="@string/call"
                android:textColor="@color/white" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>